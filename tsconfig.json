{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "lib": [
            "ES2019",
            "DOM"
        ],
        "sourceMap": true,
        "allowJs": false,
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "outDir": "./dist"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}